# Use the native arm64 image for speed
FROM ubuntu:24.04

# Prevent interactive prompts during installation
ENV DEBIAN_FRONTEND=noninteractive

# Install cross-compilation and kernel build tools
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc-riscv64-linux-gnu \
    g++-riscv64-linux-gnu \
    binutils-riscv64-linux-gnu \
    bc \
    rsync \
    flex \
    bison \
    libssl-dev \
    libncurses-dev \
    libelf-dev \
    git \
    vim \
    dwarves \
    cpio \
    libgnutls28-dev \
    python3 \
    python3-setuptools \
    python3-pyelftools \
    texinfo \
    autoconf \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*
