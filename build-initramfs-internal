#!/bin/bash
cd /busybox
make ARCH=riscv CROSS_COMPILE=riscv64-linux-gnu- defconfig
sed -i 's/# CONFIG_STATIC is not set/CONFIG_STATIC=y/;
        s/CONFIG_TC=y/CONFIG_TC=n/;
        s/CONFIG_FEATURE_TC_INGRESS=y/CONFIG_FEATURE_TC_INGRESS=n/' \
       .config
make ARCH=riscv CROSS_COMPILE=riscv64-linux-gnu- oldconfig
make ARCH=riscv CROSS_COMPILE=riscv64-linux-gnu- -j$(nproc)
make ARCH=riscv CROSS_COMPILE=riscv64-linux-gnu- install
mv _install static
mkdir -p _install/{bin,sbin,etc,proc,sys,usr/bin,usr/sbin,dev,lib}
mv static _install/
cat <<'EOF' > _install/init
#!/static/bin/sh
export PATH=/static/sbin:/static/bin:/static/usr/sbin:/static/usr/bin

mount -t proc none /proc
mount -t sysfs none /sys
mount -t devtmpfs devtmpfs /dev

echo "Welcome to RISC-V Linux!"
mkdir -p /mnt/host
mount -t 9p -o trans=virtio,version=9p2000.L hostshare /mnt/host || true

if [[ -d /lib/modules/arch ]]
then
    mkdir /lib/modules/`uname -r`
    mv /lib/modules/* /lib/modules/`uname -r`/
fi

exec setsid cttyhack sh
EOF
chmod +x _install/init
cp -pR /output/modules _install/lib/
cp -pR /output/e2fsprogs/* _install/
(cd _install && find . -print0 | cpio --null -ov --format=newc | gzip -9 > /output/initramfs.cpio.gz)
cd ..
/output/mkimage -A riscv -T script -C none -n "Boot Script" -d /boot.cmd /output/boot.scr
